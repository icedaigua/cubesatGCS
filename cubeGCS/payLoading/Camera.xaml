<UserControl x:Class="payLoading.Camera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:payLoading"
             mc:Ignorable="d">
    <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="相机指令" Height="600">
                <GroupBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" 
                        MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FFC9D8A0" Offset="1"/>
                        <GradientStop Color="#FFE8E8B2" Offset="0.94"/>
                        <GradientStop Color="#FFBFE2C0" Offset="0.149"/>
                    </LinearGradientBrush>
                </GroupBox.Background>
                <Grid>
                    <ComboBox Margin="61,93,55.8,435" Name="cB_camera"  Width="200" Height="40" 
												VerticalAlignment="Center" Foreground="IndianRed" 
												FontFamily="宋体" FontWeight="DemiBold" >
                    </ComboBox>

                    <TextBox Name="tB_uv_params"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Width="200" Height="40">00</TextBox>

                    <Button Margin="10,369,0,159" Width="200"  Height="40" VerticalAlignment="Center"
                                   >
                        发送相机指令
                    </Button>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="音频指令" Foreground="Chocolate">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FFE0D8D8" Offset="0.225"/>
                            <GradientStop Color="#FFD8F1C6" Offset="0.494"/>
                            <GradientStop Color="#FFB29191" Offset="0.02"/>
                            <GradientStop Color="#FFF3DEEF" Offset="0.703"/>
                            <GradientStop Color="#FFCBD398" Offset="0.948"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>


                    </Grid.RowDefinitions>



                    <Button Grid.Row="1" Grid.ColumnSpan="1"
                                    Name="BN_send_wav_cmd"
                                  
                                    >
                        发送音频指令
                    </Button>
                    <Button Grid.Row="2" Grid.ColumnSpan="1"
                                    Name="BN_stop_send_wav_cmd"
                                   
                                    >
                        停止发送指令
                    </Button>
                </Grid>

            </GroupBox>

            <GroupBox Grid.Column="2" Header="图像" Height="600">
                <GroupBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" 
                        MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FFC9D8A0" Offset="1"/>
                        <GradientStop Color="#FFE8E8B2" Offset="0.94"/>
                        <GradientStop Color="#FFBFE2C0" Offset="0.149"/>
                    </LinearGradientBrush>
                </GroupBox.Background>
                <Grid>



                    <Button Margin="10,369,0,159" Width="200"  Height="40" VerticalAlignment="Center"
                                    >
                        图像转换
                    </Button>
                </Grid>
            </GroupBox>


    </Grid>
</UserControl>
